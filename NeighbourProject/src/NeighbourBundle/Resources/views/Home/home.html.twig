{% extends "base.html.twig" %}

{% block title %} Home{% endblock %}

{% block body %}

    <h1 class="text-center">Bonjour {{ uSession.prenom }}</h1>
    <div class="d-flex container">
        <div class="table_container w-100">
            <table id="toolsTable" class="table table-striped table-bordered" cellspacing="0">
                <thead>
                <tr>
                    <th>Objet</th>
                    <th>Propri√©taire</th>
                    <th>Appartement</th>
                    <th>Disponible?</th>
                </tr>
                </thead>
                <tbody>

                {% for tool in tools %}
                        <tr class="{% if tool.dispo == 0 %}bg-secondary{% endif %}">
                            <td>
                               {{ tool.toollist.name|capitalize }}
                            </td>
                            <td>
                               {{ tool.user.prenom|capitalize }} {{ tool.user.nom|capitalize }}
                            </td>
                            <td>
                               {{ tool.user.appartement|capitalize }}
                            </td>
                            <td>
                               {{ tool.dispo }}
                            </td>
                        </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>



{% endblock %}
